<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    android:background="#FDF1FD"
    tools:context=".activitys.AddRecipeActivity">


    <ImageView
        android:id="@+id/add_IMG_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/pickDishImages_BTN_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pick dish images" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <Button
            android:id="@+id/previousBtn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:icon="@drawable/ic_baseline_navigate_before_24" />

        <ImageView
            android:id="@+id/ImageSwitcher_add"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <Button
            android:id="@+id/nextBtn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:icon="@drawable/ic_baseline_navigate_next_24" />
    </LinearLayout>

    <Button
        android:id="@+id/pickImagesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pick_recipe_images" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/add_TXT_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="recipe name"
        android:textSize="20sp"
        android:textStyle="bold" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/add_TXT_Ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="write recipe Ingredients"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Category:    "
            android:textSize="20sp" />


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txtView"
            android:drawSelectorOnTop="true"
            android:tooltipText="category list" />

    </LinearLayout>


    <Button
        android:id="@+id/add_BTN_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save recipe" />


</LinearLayout>